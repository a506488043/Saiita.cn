<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
  <welcome-file-list>
    <welcome-file>login.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>LoginPost</servlet-name>
    <servlet-class>Saiita.cn.action.LoginPost</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LoginPost</servlet-name>
    <url-pattern>/LoginPost.do</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>GetAllUserInfo</servlet-name>
    <servlet-class>Saiita.cn.action.GetAllUserInfo</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>GetAllUserInfo</servlet-name>
    <url-pattern>/GetAllUserInfo.do</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>GetAllAlpayInfo</servlet-name>
    <servlet-class>Saiita.cn.action.GetAllAlpayInfo</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>GetAllAlpayInfo</servlet-name>
    <url-pattern>/GetAllAlpayInfo.do</url-pattern>
  </servlet-mapping>
  
  <filter>
    <filter-name>LoginFilter</filter-name>
    <filter-class>Saiita.cn.filter.LoginFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>LoginFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>CharactorFilter</filter-name>
    <filter-class>Saiita.cn.filter.CharactorFilter</filter-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>CharactorFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>XssSqlFilter</filter-name>
    <filter-class>Saiita.cn.filter.XssFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>XssSqlFilter</filter-name>
    <url-pattern>/*</url-pattern>
    <dispatcher>REQUEST</dispatcher>
    <dispatcher>FORWARD</dispatcher>
  </filter-mapping>
</web-app>